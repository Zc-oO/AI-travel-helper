/* 全局样式 */
page {
  background-color: #F8F8F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 通用容器 */
.container {
  padding: 0 32rpx;
  min-height: 100vh;
  background-color: #F8F8F8;
}

/* 进度条样式 */
.progress-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background-color: #E5E5E5;
  z-index: 1000;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #FF6B4A 0%, #FF8A4A 100%);
  transition: width 0.3s ease;
}

/* 步骤指示器 */
.step-indicator {
  position: fixed;
  top: 20rpx;
  right: 32rpx;
  background-color: rgba(255, 107, 74, 0.1);
  color: #FF6B4A;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  z-index: 1000;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 20rpx;
  left: 32rpx;
  width: 64rpx;
  height: 64rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  color: #333;
}

/* 主要内容区域 */
.main-content {
  padding-top: 120rpx;
  padding-bottom: 200rpx;
}

/* 标题样式 */
.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  line-height: 1.4;
}

/* 输入框样式 */
.input-container {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-field {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid #E5E5E5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #FF6B4A;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 74, 0.15);
}

.input-placeholder {
  color: #999;
}

/* 选择卡片样式 */
.option-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #E5E5E5;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.option-card.selected {
  border-color: #FF6B4A;
  background-color: rgba(255, 107, 74, 0.05);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 74, 0.15);
}

.option-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.option-subtitle {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 标签样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tag-item {
  background-color: #FFFFFF;
  border: 2rpx solid #E5E5E5;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tag-item.selected {
  background-color: #FF6B4A;
  border-color: #FF6B4A;
  color: #FFFFFF;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(90deg, #FF6B4A 0%, #FF8A4A 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 74, 0.3);
  transition: all 0.3s ease;
  border: none;
  width: 100%;
  position: fixed;
  bottom: 60rpx;
  left: 32rpx;
  right: 32rpx;
  margin: 0 auto;
  max-width: 686rpx;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 74, 0.3);
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #FF6B4A;
  border: 2rpx solid #FF6B4A;
  border-radius: 48rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background-color: rgba(255, 107, 74, 0.1);
}

/* 日期选择器 */
.date-picker {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #E5E5E5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.date-text {
  font-size: 32rpx;
  color: #333;
}

.date-placeholder {
  color: #999;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 24rpx;
}

/* 错误状态 */
.error-container {
  background-color: rgba(255, 87, 51, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.error-text {
  color: #FF5733;
  font-size: 28rpx;
  line-height: 1.4;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx;
  }
  
  .page-title {
    font-size: 44rpx;
  }
  
  .btn-primary {
    left: 24rpx;
    right: 24rpx;
    max-width: 702rpx;
  }
}